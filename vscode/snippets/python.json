	"Finding int in str": {
		"prefix": [
			"int in str"
		],
		"body": [
			"some_string = \"0abc 1 def 23\" \n",
			"numbers = []",
			"for word in some_string.split():",
			"    if word.isdigit():",
			"        numbers.append(int(word)) \n",
			"        print(numbers)"
		],
	},
	"Text animation": {
		"prefix": [
			"animate",
			"animation"
		],
		"body": [
			"import time",
			"import sys",
			"def animation(str):",
			"    for i in str:",
			"        sys.stdout.write(i)",
			"        sys.stdout.flush()",
			"        time.sleep(0.1)",
			"animation(\"Hello World! This message will be animated in the terminal\")"
		]
	},
